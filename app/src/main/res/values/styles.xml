<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="LayoutStartStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/layout_background</item>
    </style>

    <style name="LayoutStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">#ffffff</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ListStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">#32ab9f</item>
    </style>

    <style name="ErrorsStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#ff2915</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="TitlesStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MyActionBar">
        <item name="android:background">#32ab9f</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
